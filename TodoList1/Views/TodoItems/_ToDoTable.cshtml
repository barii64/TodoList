@model IEnumerable<TodoList1.Models.TodoItem>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var listNotDone = new List<TodoList1.Models.TodoItem>();
        }
        @foreach (var item in Model)
        {
            @if (item.IsDone == true)
            {
                <tr>
                    <td>
                        <label>
                            @Html.DisplayFor(modelItem => item.Title)
                        </label>
                        <input type="text" class="edit-input" />
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => item.IsDone)

                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            else
            {
                listNotDone.Add(item);
            }
        } 
        @foreach (var item in listNotDone)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.IsDone)

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

        <tr id="CreateBlock">
            @using (Html.BeginForm("Create", "TodoItems", FormMethod.Post))
            {
                <td><textarea id="createInput" value="Title" name="Title"></textarea></td>
                <td><input id="IsDone" value="true" type="checkbox" name="IsDone"></td>
                <td>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </td>

            }
        </tr>
    </tbody>
</table>




